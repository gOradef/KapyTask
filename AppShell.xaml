<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="KapyTask.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:KapyTask.Views"
    Title="KapyTask">

    <TabBar>
        <Tab Title="Actual"
             StyleClass="TabbedPage"
            >
            <ShellContent ContentTemplate="{DataTemplate views:CatsPage}"
                                  Route="CatsPage"/>
        </Tab>
        
        <Tab Title="All"
        >
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}"
                                  Route="MainPage"/>
        </Tab>
        <Tab
            Title="Settings"
            Icon="settings"><ShellContent ContentTemplate="{DataTemplate views:SettingsPage}"/>
        </Tab>
    </TabBar>
</Shell>
